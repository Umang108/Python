class Solution(object):
    def maxRunTime(self, n, batteries):
        """
        :type n: int
        :type batteries: List[int]
        :rtype: int
        """
        batteries.sort()
        total = sum(batteries)
        left, right = 0, total // n

        while(left < right):
            mid = (left + right + 1) // 2
            usable =0

            for i in batteries:
                usable += min(i, mid)

            if(usable >= n * mid):
                left = mid

            else:
                right = mid - 1

        return left


















